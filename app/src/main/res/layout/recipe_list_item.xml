<?xml version="1.0" encoding="utf-8"?>
<com.smadacm.reciperepo.views.list.widget.layout.RecipeListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.smadacm.reciperepo.views.list.widget.Item" >
    <TextView
        android:id="@+id/recipeListItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/recipeListItemSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/recipeListItemTitle"
        android:layout_alignStart="@id/recipeListItemTitle"
        android:textColor="@color/colorListSecondary"
        android:textAppearance="?android:attr/textAppearanceListItemSecondary" />
</com.smadacm.reciperepo.views.list.widget.layout.RecipeListItem>
